{
  "name": "blog.hirataku.dev",
  "description": "my personal blog",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "predeploy:stg": "cpx -C deployment/stg/public/* public",
    "predeploy:prod": "cpx -C deployment/prod/public/* public",
    "deploy:stg": "NOW_PROJECT_ID=$STG_NOW_PROJECT_ID now --prod",
    "deploy:prod": "now --prod",
    "postdeploy:stg": "rimraf public",
    "postdeploy:prod": "rimraf public",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "storybook:dev": "start-storybook",
    "storybook:build": "build-storybook -c .storybook",
    "lint": "npm-run-all -p lint:*",
    "lint:es": "eslint . --ext .js,.ts,.tsx --cache",
    "lint:style": "stylelint \"src/**/*.tsx\"",
    "test": "jest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.5",
    "next": "^9.3.6",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@mdx-js/loader": "^1.6.5",
    "@next/bundle-analyzer": "^9.3.6",
    "@next/mdx": "^9.3.6",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@types/jest": "^25.2.3",
    "@types/mdx-js__react": "^1.5.2",
    "@types/node": "^14.0.11",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^25.5.4",
    "jest-next-dynamic": "^1.0.1",
    "jest-styled-components": "^7.0.2",
    "now": "^19.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.5.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.8.3"
  }
}
